# Application
SPRING_PROFILES_ACTIVE=prod
APP_JWT_SECRET=correctly-added-in-.env-file

# Database
DATABASE_HOST=db
DATABASE_PORT=3306
DATABASE_PORT_MAPPING=3307
MYSQL_DATABASE=saas-app
MYSQL_ROOT_PASSWORD=rootpassword
SPRING_DATASOURCE_USERNAME=root
SPRING_DATASOURCE_PASSWORD=rootpassword

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
APP_CACHING_ENABLED=true

# Email (override if needed)
APP_EMAIL_FROM=noreply@saasstarter.com
APP_EMAIL_FROM_NAME=SAAS Starter
APP_EMAIL_VERIFICATION_BASE_URL=http://localhost:9090/api/v1/auth/verify-email
APP_EMAIL_PASSWORD_RESET_BASE_URL=http://localhost:9090/api/v1/auth/reset-password
APP_EMAIL_ENABLED=true

# SMTP defaults (use real provider values in your .env)
SPRING_MAIL_HOST=localhost
SPRING_MAIL_PORT=1025
SPRING_MAIL_USERNAME=
SPRING_MAIL_PASSWORD=
SPRING_MAIL_SMTP_AUTH=false
SPRING_MAIL_SMTP_TLS=false

# CORS Configuration (comma-separated list of allowed origins)
# Example: APP_CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
APP_CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# SSL/HTTPS Configuration (optional, set to true to enable SSL)
SERVER_SSL_ENABLED=false
SERVER_SSL_KEYSTORE=/path/to/keystore.p12
SSL_KEYSTORE_PASSWORD=your-keystore-password
SERVER_SSL_KEYSTORE_TYPE=PKCS12
SERVER_SSL_KEY_ALIAS=tomcat

